mixin shopListFooter
    +b('footer').shopListFooter(touch-action="none")
        +e('div').wrapper
            +e('div').content
                +e('form').form
                    //button.shopListFooter__btn(class="shopListFooter__btn_type_photo")

                    +e('input').input(type="text", id="shopValue", placeholder="Например, овсяные хлопья")
                    +e('input').hidden(type="hidden", value="")

                    +e('label').btn(for="shopValue", touch-action="none", class="shopListFooter__btn_type_submit")

            +e('div').footer
                +e('ul').list
                    +e('li').item
                        +e('img')(src="img/vis-photo-1.jpg")

                    +e('li').item
                        +e('img')(src="img/vis-photo-2.jpg")

                    +e('li').item
                        +e('img')(src="img/vis-photo-3.jpg")
