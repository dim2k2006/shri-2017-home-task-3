mixin shopListItem(data)
    - var shopListItemData = data ? data : {};

    - shopListItemData.title = shopListItemData.title ? shopListItemData.title : '';

    +b('div').shopListItem
        +e('div').wrapper
            +e('div').content!= shopListItemData.title

            +e('div').footer
                +e('ul').list
                    +e('li').item
                        button.shopListItem__btn(class="shopListItem__btn_type_complete")

                    +e('li').item
                        button.shopListItem__btn(class="shopListItem__btn_type_edit")

                    +e('li').item
